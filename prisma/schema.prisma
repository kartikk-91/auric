generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}



enum UserRole {
  ADMIN
  USER
}

enum Sentiment {
  POSITIVE
  NEUTRAL
  NEGATIVE
}

enum RatingType {
  OVERALL
  CUSTOM
}

enum InsightType {
  FEATURE
  CRITICISM
}

enum KnowledgeType {
  SUMMARY
  FEATURE
  ISSUE
  TREND
}



model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  companyAdded  Boolean?
  password      String?
  role          UserRole  @default(USER)
  accounts      Account[]
  company       Company?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model VerificationToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
}



model Company {
  id          String  @id @default(cuid())
  userId      String  @unique
  name        String
  phoneNumber String?
  address     String
  logoUrl     String?
  description String
  website     String?

  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  feedbacks    Feedback[]
  feedbackForm FeedbackForm?
  metrics      OrgMetrics?
  knowledge    OrgKnowledge[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model FeedbackForm {
  id        String  @id @default(cuid())
  schema    Json
  title     String?
  logoUrl   String?
  name      String?
  companyId String  @unique

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}



model Feedback {
  id        String   @id @default(cuid())
  name      String?
  state     String?
  country   String?
  text      String?
  fields    Json    

  companyId String
  company   Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)

  ratings   Rating[]
  analysis  FeedbackAnalysis?
  insights  FeedbackInsight[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}



model Rating {
  id         String     @id @default(cuid())
  feedbackId String
  type       RatingType
  label      String?   
  value      Int       

  feedback Feedback @relation(fields: [feedbackId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}



model FeedbackAnalysis {
  id             String    @id @default(cuid())
  feedbackId     String    @unique
  sentiment      Sentiment
  sentimentScore Float    
  auricImpact    Float    

  feedback Feedback @relation(fields: [feedbackId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}



model FeedbackInsight {
  id         String      @id @default(cuid())
  feedbackId String
  type       InsightType
  label      String     
  confidence Float

  feedback Feedback @relation(fields: [feedbackId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}



model OrgMetrics {
  companyId      String   @id
  totalFeedbacks Int
  avgRating      Float
  auricScore     Float
  positiveCount  Int
  neutralCount   Int
  negativeCount  Int

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  updatedAt DateTime @updatedAt
}



model OrgKnowledge {
  id        String        @id @default(cuid())
  companyId String
  type      KnowledgeType
  content   String
  embedding Float[]      

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  updatedAt DateTime @updatedAt
}
